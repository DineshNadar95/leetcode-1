# recurions
# time O(n)
# space O(h)

# dfs traversal
# start from the right most node, then current node, then left subtree

class Solution(object):
    
    def bstToGst(self, root):
        
        self.sum_ = 0
        self.dfs(root)
        return root
    
    def dfs(self, node):
        if node.right:
            self.dfs(node.right)
            
        self.sum_ = self.sum_ + node.val
        node.val = self.sum_
        
        if node.left:
            self.dfs(node.left)
        
        
