# sort then enumerate
# time O(nlgn)
# space O(1)

class Solution(object):
    def longestConsecutive(self, nums):
        
        if not nums:
            return 0
        
        nums.sort()
        res = 1
        cur = 1
        
        for i in range(1, len(nums)):
            if nums[i] == nums[i - 1]:
                continue
                
            if nums[i] == nums[i - 1] + 1:
                cur += 1
                res = max(res, cur)
            else:
                cur = 1
        return res
                  

# time O(n)
# space O(n)
# hashset
哈希表，遍历每个数，while 循环在整个运行过程中只会被迭代 n 次

class Solution(object):
    def longestConsecutive(self, nums):
        
        if not nums:
            return 0
        
        nums_set = set(nums)
        res = 0
        cur = 0
        cur_len = 0
        
        for num in nums_set:
            if num - 1 not in nums_set:
                cur = num
                cur_len = 1
            
            while cur + 1 in nums_set:
                cur = cur + 1
                cur_len += 1
                
            res = max(res, cur_len)
                
        return res
            
