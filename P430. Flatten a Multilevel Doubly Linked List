# dfs, 把child 看作左子树，把next看作右子树，pre-order travsesal
# time O(n)
# space O(n)

class Solution(object):
    def flatten(self, head):
        
        if not head:
            return None
        
        dummy = Node(None, None, head, None)
        self.dfs(dummy, head)
        dummy.next.prev = None
        return dummy.next
    
    def dfs(self, prev, cur): # return tail of dfs res
        
        if not cur:
            return prev
        
        cur.prev = prev
        prev.next = cur
        
        tmpNext = cur.next
        tail_child = self.dfs(cur, cur.child) # left child
        cur.child = None
        
        tail = self.dfs(tail_child, tmpNext) # right child
        return tail
        

# stack 
# time O(n)
# space O(n)

"""
# Definition for a Node.
class Node(object):
    def __init__(self, val, prev, next, child):
        self.val = val
        self.prev = prev
        self.next = next
        self.child = child
"""
class Solution(object):
    def flatten(self, head):
        """
        :type head: Node
        :rtype: Node
        """
        
        if not head:
            return 
        
        dummy = Node(0, None, head, None)
        stack = [head]
        prev = dummy
        while stack:
            node = stack.pop()
            
            node.prev = prev
            prev.next = node
            
            if node.next:
                stack.append(node.next)
            if node.child:
                stack.append(node.child)
                node.child = None
                
            prev = node
            
        dummy.next.prev = None # 断开dummy
        return dummy.next
        
            
