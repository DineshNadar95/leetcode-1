# brute force
# time O(mn)
# space O(m)

class Solution(object):
    def nextGreaterElement(self, nums1, nums2):
        
        res = []
        for num in nums1:
            nxt_greater = self.next_greater(nums2, num)
            res.append(nxt_greater)
        return res
    
    def next_greater(self, nums2, num):
        index = nums2.index(num)
        for i in range(index, len(nums2)):
            if nums2[i] > num:
                return nums2[i]
        return -1
            
            


2. stack + hashmap
time O(m + n)
space O(m + n)

# max stack
class Solution(object):
    def nextGreaterElement(self, nums1, nums2):
        
        # key : num, value: next greater num
        dic = {}
        # space O(n), time O(n)
        stack = []
        for num in nums2:
            while stack and stack[-1] < num:
                dic[stack.pop()] = num
            stack.append(num)
            
        # time O(m), space O(m)
        return [dic.get(num, -1) for num in nums1]
