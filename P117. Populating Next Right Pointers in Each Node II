# queue
# time O(n), space O(n)

# iterative
# time O(n), space O(1)
class Solution(object):
    def connect(self, root):
        
        node = root
        levelHead = Node(0)
        
        while node: 
            needle = levelHead
            
            while node:
                if node.left:
                    needle.next = node.left 
                    needle = needle.next 
                    
                if node.right:
                    needle.next = node.right
                    needle = needle.next

                node = node.next
            node = levelHead.next
            levelHead.next = None
        return root
            
            
