class Solution:
    def twoSumLessThanK(self, A: List[int], K: int) -> int:
        A.sort()
        left, right = 0, len(A) - 1 
        ans = - 1
        while left < right:
            s_cur = A[left] + A[right]
            if s_cur < K:
                ans = max(ans, s_cur)
                left += 1
            else:
                right -= 1
        return ans
