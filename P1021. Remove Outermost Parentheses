# time O(n)
# sppace O(n)

class Solution(object):
    def removeOuterParentheses(self, S):
        """
        :type S: str
        :rtype: str
        """
        res = ''
        prev = 0
        count = 0
        for i, char in enumerate(S):
            if char == '(':
                count += 1
            else:
                count -= 1
            if count == 0:
                res += S[prev + 1:i]
                prev = i + 1
        return res
        
        
class Solution(object):
    def removeOuterParentheses(self, S):
        """
        :type S: str
        :rtype: str
        """
        res = ''
        prev_index = 0
        
        count = 0
        
        for i, ele in enumerate(S):
            if i == '(':
                count += 1
            elif i == ')':
                count -= 1
                if count == 0:
                    res += S[prev_index + 1 : i]
                    prev_index = i + 1
        return res
        
