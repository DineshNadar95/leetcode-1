# brute force: pre order traversal
# sol2 time O(n), space O(h)
# dfs return tail

class Solution(object):
    def flatten(self, root):
        
        if not root:
            return None
        
        self.dfs(root)
        return root
    
    def dfs(self, node):
        if not node:
            return None
        
        l_t = self.dfs(node.left)
        r_t = self.dfs(node.right)
        
        if node.left:
            l_t.right = node.right
            node.right = node.left
            node.left = None
            
        if r_t:
            return r_t
        if l_t:
            return l_t
        return node
