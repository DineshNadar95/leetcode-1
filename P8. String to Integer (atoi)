class Solution(object):
    def myAtoi(self, str):
        """
        :type str: str
        :rtype: int
        """
        str = str.strip()
        if not str:
            return 0
        number = 0
        flag = 1
        
        if str[0] == '-':
            flag = -1
            str = str[1:]
        elif str[0] == '+':
            flag = 1
            str = str[1:]
            
        for c in str:
            if c >= '0' and c <= '9':
                number = number * 10 + ord(c) - ord('0')
            else:
                break
        
        number = flag * number
        number = number if number <= (2**31 - 1) else (2**31 - 1)
        number = number if number >= (-2**31) else (-2**31)
        return number
        
    
