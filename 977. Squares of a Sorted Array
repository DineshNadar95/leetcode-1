# time O(n)
# space O(n)

class Solution(object):
    def sortedSquares(self, A):
        
        i = 0
        while i < len(A) and A[i] < 0:
            i += 1
        # j is the first num >= 0
        
        j = i 
        i = i - 1
        
        res = []
        
        while i >= 0 and j < len(A):
            if abs(A[i]) <= abs(A[j]):
                res.append(abs(A[i]) ** 2)
                i -= 1
            else:
                res.append(abs(A[j]) ** 2)
                j += 1
                
        while i >= 0:
            res.append(abs(A[i]) ** 2)
            i -= 1
            
        while j < len(A):
            res.append(abs(A[j]) ** 2)
            j += 1
            
        return res
            
                
