# time O(n)
# space O(n)

class Solution(object):
    def sortedSquares(self, A):
        """
        :type A: List[int]
        :rtype: List[int]
        """
        
        res = []
        
        i = 0
        while i < len(A):
            if A[i] < 0:
                i += 1
            else:
                break
                
        j = i
        i = i - 1
        
        while i >= 0 and j < len(A):
            if abs(A[i]) < A[j]:
                res.append(A[i] ** 2)
                i -= 1
            else:
                res.append(A[j] ** 2)
                j += 1
        
        while i >= 0:
            res.append(A[i] ** 2)
            i -= 1
        
        while j < len(A):
            res.append(A[j] ** 2)
            j += 1
            
        return res
        
        
            
                
                
