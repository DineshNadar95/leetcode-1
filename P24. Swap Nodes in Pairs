
# sol1
# two pointers
# time O(n), space O(1)

class Solution(object):
    def swapPairs(self, head):
        
        if not head or not head.next:
            return head
        
        dummy = ListNode(0)
        dummy.next = head
        cur = dummy
        
        while cur.next and cur.next.next:
            
            p1 = cur.next
            p2 = cur.next.next
            tmp = p2.next
            
            cur.next = p2
            p2.next = p1
            p1.next = tmp
            
            cur = cur.next.next
            
        return dummy.next
         
  # recursion
class Solution(object):
    def swapPairs(self, head):
        """
        :type head: ListNode
        :rtype: ListNode
        """
        if not head or not head.next:
            return head
        second = head.next
        head.next = self.swapPairs(second.next)
        second.next = head
        return second
            
