
# stack
# time O(n) , travsese + stack
# space O(n) 

class Solution(object):
    def decodeString(self, s):
        
        stack = []
        cur_num = 0
        cur_str = ''
        
        for char in s:
            if char.isdigit():
                cur_num = cur_num * 10 + int(char)
            elif char.isalpha():
                cur_str = cur_str + char
            elif char == '[':
                stack.append(cur_str)
                stack.append(cur_num)
                cur_str = ''
                cur_num = 0
            elif char == ']':
                pre_num = stack.pop()
                pre_res = stack.pop()
                cur_str = pre_res + cur_str * pre_num
        return cur_str
