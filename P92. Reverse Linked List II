# first go to m - 1 node
# convert from m to n
# node, count is m -1 , cur = m + 1 node
        # count is n - 2, cur = n node

class Solution(object):
    def reverseBetween(self, head, m, n):
        
        
        count = 0
        dummy = ListNode(0)
        dummy.next = head
        pre = dummy
        
        while count < m - 1:
            pre = pre.next
            count += 1
    
        # pre 1, m = 2
        mid = pre.next
        cur = pre.next.next # 3
        
        
        while count <= n - 2:
            next = cur.next # 4
            cur.next = pre.next
            pre.next = cur
            mid.next = next
            cur = next
            
            count += 1
        return dummy.next
