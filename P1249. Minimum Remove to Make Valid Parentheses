# stack add current string when we met a '('
# pop out string from stack when we met a ')' and add to our res

# time O(n)
# space O(n)

class Solution(object):
    def minRemoveToMakeValid(self, s):
        stack = []
        res = ''
        
        for char in s:
            if char == '(':
                stack.append(res)
                res = ''
            elif char == ')':
                if stack:
                    res = stack.pop() + '(' + res + ')'
            else:
                res = res + char 
                
        while stack:
            res = stack.pop() + res # corner case 'a(b(c'
        return res
                        
